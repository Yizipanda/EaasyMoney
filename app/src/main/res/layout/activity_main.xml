<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background23"
    tools:context=".MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/rofile" />









    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="20dp"
        android:background="#00000000">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            app:hintAnimationEnabled="true"
            android:textColorHint="@color/dblue"
            android:hint="E-mail"
            app:hintTextColor="@color/dblue"
            app:boxStrokeColor="@color/blue">




            <EditText
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="E-mail"
                android:background="@color/lblue"
                android:textColorHint="@color/blue"
                android:inputType="textEmailAddress"
                android:textColor="@color/blue"
                android:textStyle="bold"


                />



        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="20dp"
        android:background="#00000000">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            app:hintAnimationEnabled="true"
            android:textColorHint="@color/dblue"
            android:hint="Password"
            app:hintTextColor="@color/dblue"
            app:boxStrokeColor="@color/blue"
            app:passwordToggleEnabled="true">




            <EditText
                android:background="@color/lblue"
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColorHint="@color/blue"
                android:inputType="textPassword"
                android:textColor="@color/dblue"
                android:textStyle="bold"


                />



        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="530dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/forgot"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:background="#00000000"
            android:onClick="pdd"
            android:gravity="right"
            android:text="Forget Password?"
            android:textColor="@color/blue"
            android:textStyle="bold" />




        <Button
            android:id="@+id/signup"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-320dp"
            android:background="#00000000"
            android:onClick="signnn"
            android:gravity="left"
            android:text="Sign Up"
            android:textColor="@color/blue"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="610dp"
        android:gravity="center">


        <Button
            android:id="@+id/login"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Login"
            android:textColor="@color/purple_700"
            android:background="@color/blue"
            android:textStyle="bold"
            app:cornerRadius="60dp"
            android:textSize="29dp"/>
    </LinearLayout>




    <ProgressBar
        android:id="@+id/load"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="370dp"
        android:background="@color/dblue"
        android:layout_marginLeft="150dp"
        android:visibility="invisible"/>

</RelativeLayout>

</ScrollView>